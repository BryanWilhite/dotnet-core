{
    "version": "2.0.0",
    "tasks": [
        {
            "command": "dotnet",
            "taskName": "dotnet build console-minimal",
            "isBackground": false,
            "type": "shell",
            "args": [
                "build",
                "hwapp.csproj"
            ],
            "options": {
                "cwd": "${workspaceRoot}/dotnet-console-minimal/hwapp"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "command": "dotnet",
            "taskName": "dotnet build lightbulbs",
            "isBackground": true,
            "type": "shell",
            "args": [
                "build",
                "Songhay.LightBulbs.sln"
            ],
            "options": {
                "cwd": "${workspaceRoot}/dotnet-lightbulbs"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "command": "dotnet",
            "taskName": "dotnet test lightbulbs",
            "isBackground": true,
            "type": "shell",
            "args": [
                "test",
                "Songhay.LightBulbs.Tests/Songhay.LightBulbs.Tests.csproj"
            ],
            "options": {
                "cwd": "${workspaceRoot}/dotnet-lightbulbs"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "command": "dotnet",
            "taskName": "dotnet run lightbulbs",
            "isBackground": true,
            "type": "shell",
            "args": [
                "run",
                "--project",
                "Songhay.LightBulbs/Songhay.LightBulbs.csproj"
            ],
            "options": {
                "cwd": "${workspaceRoot}/dotnet-lightbulbs"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}
