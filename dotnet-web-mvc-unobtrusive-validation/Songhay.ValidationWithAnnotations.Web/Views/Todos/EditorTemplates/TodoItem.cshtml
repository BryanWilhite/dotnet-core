@using Songhay.ValidationWithAnnotations.Web.Controllers
@model Songhay.ValidationWithAnnotations.Web.Models.TodoItem

<div class="form-group mb-3 row">
    <div class="col-md-1">
        <label asp-for="Id" class="form-label"></label>
    </div>
    <div class="col-md-2">
        <input asp-for="Id"
            class="form-control" readonly="readonly" type="text" value="@Model.Id" />
    </div>
    <div class="col-md-1 offset-md-8">
        <button
            asp-controller="@nameof(TodosController).Replace(nameof(Controller), string.Empty)"
            asp-action="@nameof(TodosController.RemoveRow)"
            asp-route-itemId="@Model.Id"
            class="btn btn-outline-danger" title="Remove Row" type="submit">Ã—</button>
    </div>
</div>
<div class="form-group mb-3">
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-check form-group mb-3">
    <input asp-for="IsComplete" class="form-check-input" checked="@Model.IsComplete" />
    <label asp-for="IsComplete" class="form-check-label"></label>
</div>
