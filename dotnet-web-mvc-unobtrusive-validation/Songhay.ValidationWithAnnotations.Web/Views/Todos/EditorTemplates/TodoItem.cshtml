@model Songhay.ValidationWithAnnotations.Web.Models.TodoItem

<div class="form-group mb-3 row">
    <div class="col-auto">
        <label asp-for="Id" class="form-label"></label>
    </div>
    <div class="col-auto">
        <input asp-for="Id" class="form-control" readonly="readonly" type="text" />
    </div>
</div>
<div class="form-group mb-3">
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-check form-group mb-3">
    <input asp-for="IsComplete" class="form-check-input" checked="@Model.IsComplete" />
    <label asp-for="IsComplete" class="form-check-label"></label>
</div>
