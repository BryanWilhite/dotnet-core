@model Songhay.ValidationWithMarkup.Web.Models.TodoList

@{
    ViewData["Title"] = $"TODO Item ({Model.Id})";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="Todos" asp-action="Save" data-ajax="true" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Id" class="control-label">TODO List ID</label>
        <input asp-for="Id" class="form-control" readonly="readonly" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">TODO List Name</label>
        <input asp-for="Name" class="form-control"
               data-val="true"
               data-val-length-max="24"
               data-val-required="Value is required."
               />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExpirationDate" class="control-label">List Expiration Date</label>
        <input asp-for="ExpirationDate" class="form-control" />
        <span asp-validation-for="ExpirationDate" class="text-danger"></span>
    </div>
    <div class="form-group">
    @for (var i = 0; i < Model.Items.Count; i++)
    {
        @Html.EditorFor(model => model.Items[i])
    }
    </div>
    <button type="submit">Save</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
