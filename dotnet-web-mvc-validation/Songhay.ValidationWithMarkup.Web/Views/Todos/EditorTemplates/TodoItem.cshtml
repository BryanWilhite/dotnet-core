@model Songhay.ValidationWithMarkup.Web.Models.TodoItem

<div class="form-group">
    <label asp-for="Id" class="control-label">TODO Item ID</label>
    <input asp-for="Id" class="form-control" readonly="readonly"  />
</div>
<div class="form-group">
    <label asp-for="Name" class="control-label">TODO Item Name</label>
    <input asp-for="Name" class="form-control"
           data-val="true"
           data-val-length-max="16"
           data-val-required="Value is required."
           />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="IsComplete" class="control-label">Complete?</label>
    <input asp-for="IsComplete" type="checkbox" checked="@Model.IsComplete" />
</div>
